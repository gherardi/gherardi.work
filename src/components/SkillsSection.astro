---
import { Badge } from '@/components/ui/badge';

const skills: string[] = [
	'typescript',
	'javascript',
	'react',
	'nodejs',
	'mongodb',
	'html',
	'css',
	'tailwindcss',
];
---

<section>
	<h4 class='font-mono text-lg mb-4'>skills</h4>
	<div class='flex flex-wrap gap-2.5 text-lg'>
		{skills.map((skill) => <Badge variant='secondary'>{skill}</Badge>)}
	</div>
</section>
